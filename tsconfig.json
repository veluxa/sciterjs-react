{
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "target": "esnext",
        "jsx": "preserve",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "isolatedModules": true,
        "sourceMap": true,
        "allowJs": true,
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
